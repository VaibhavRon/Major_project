<% layout("/boilerplate.ejs")%>
<body>

    <div class="row">

        <div class="col-8 offset-2">
            <h3>Edit this Listing</h3>
    <form method="post" action="/<%=list._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    <div>
        <label for="title" class="form-label">Title</label>
        <input  id="title" type="text" name="listing[title]" value="<%=list.title%>" class="form-control" required></input>
        <div class="invalid-feedback">please enter a valid title</div>
    </div>
   
    <br>

    <div>
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%=list.description%></textarea>
        <div class="invalid-feedback">please enter a short description</div>
    </div>
    
    <br>
    <div>
        <label for="image" class="form-label">image</label>
        <input type="file" name="listing[image][url]" class="form-control" value="<%=list.image.url%>"></input>
    </div>
    <div class="row">
    <div class="col-md-4">
        <label for="price" class="form-label">price</label>
        <input type="number" name="listing[price]" value="<%=list.price%>" class="form-control" required></input>
        <div class="invalid-feedback">please enter a valid price</div>
    </div>
   
    <br>

    <div class="col-md-8">
        <label for="location" class="form-label">location</label>
        <input type="text" name="listing[location]" value="<%=list.location%>" class="form-control" required></input>
        <div class="invalid-feedback">please enter a valid location</div>
    </div>
    </div>
    <br>
    <div>
        <label for="country" class="form-label">country</label>
        <input type="text" name="listing[country]" value="<%=list.country%>" class="form-control" required></input>
        <div class="invalid-feedback">please enter a valid country</div>
    </div>
    <br>
    <button class="btn btn-dark edit-btn mb-4">submit</button>
    </form>
</div>
</div>
</body>
